<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/view_background"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/delete_icon"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:text="Borrar"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/view_foreground"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/foto_dog"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/nombre_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/foto_dog"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/itemName"
            android:text="Nombre"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/raza_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_toRightOf="@id/nombre_dog"
            android:ellipsize="end"
            android:text="Raza"
            android:textColor="@color/itemName"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edad_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombre_dog"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/foto_dog"
            android:ellipsize="end"
            android:text="Edad"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sexo_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombre_dog"
            android:layout_toRightOf="@id/edad_dog"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="sexo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre y raza"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/fecha_oculta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sexo_oculto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/foto_dog"
        android:layout_marginTop="11dp" />
</FrameLayout>